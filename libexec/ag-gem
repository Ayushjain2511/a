create_file '.gitignore', <<-EOS
pkg
.bundle
.yardoc
doc
EOS

create_file "lib/#{NAME}.rb", <<-EOS
require '#{NAME}/version'

module #{MODULE_NAME}
end
EOS

create_file "lib/#{NAME}/version.rb", <<-EOS
module #{MODULE_NAME}
  VERSION = '0.0.1'
end
EOS

in_dir ROOT do
  system 'bundle install'
  system 'git init .'
  system 'git add .'
  system 'git commit -m "Initial commit"'
end
